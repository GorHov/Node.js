<h1>Add Courses</h1>

<form action="/add" method="POST">
    <div class="input-field col s6">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Add Name"></span>

    </div>

    <div class="input-field col s6">
        <input id="price" name="price" type="text" class="validate" required>
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Add price"></span>
    </div>

    <div class="input-field col s6">
        <input id="img" name="img" type="text" class="validate" required min="2">
        <label for="img">Picture URL</label>
        <span class="helper-text" data-error="Add URL"></span>

    </div>

    <button class="btn btn-primary">Add Course</button>
</form>